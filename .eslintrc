{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "_id": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"],
    "no-unused-vars": "off",
    "no-console": "off",
    "comma-dangle": "off",
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "quotes": ["warn", "single"]
  }
}
